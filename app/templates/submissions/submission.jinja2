{% extends 'base.jinja2' %}

{% block title %}Submission{% endblock %}

{% block content_before %}

    <div class="jumbotron shadow-sm">
        <div class="container">
            Submission {{ id }}<br><br>

            Displays submission information<br>
            Displays all revisions of submission<br>
            <table class="table table-white table-striped table-bordered table-hover">
                  <thead>
                        <tr>
                            <th scope="col">Revision #</th>
                            <th scope="col">Mistakes</th>
                            <th scope="col">View</th>
                            <th scope="col">Review</th>
                        </tr>
                  </thead>
                  <tbody>
                        <tr>
                            <td>1</td>
                            <td>7</td>
                            <td><a href="{{ url_for('submissions.revision', sub_id=id, rev_id=1) }}" class="btn btn-primary" role="button" aria-disabled="true">View</a></td>
                            <td>Reviewed</td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>5</td>
                            <td><a href="{{ url_for('submissions.revision', sub_id=id, rev_id=2) }}" class="btn btn-primary" role="button" aria-disabled="true">View</a></td>
                            <td>Reviewed</td>
                        </tr>
                        <tr>
                            <td>3</td>
                            <td>2</td>
                            <td><a href="{{ url_for('submissions.revision', sub_id=id, rev_id=3) }}" class="btn btn-primary" role="button" aria-disabled="true">View</a></td>
                            <td><a href="{{ url_for('submissions.review', sub_id=id, rev_id=1) }}" class="btn btn-primary" role="button" aria-disabled="true">Review</a></td>
                        </tr>
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}
